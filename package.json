{
  "name": "@zazen/commit-types",
  "version": "1.0.0",
  "description": "Commit with emoji, free of weariness and confusion",
  "homepage": "https://github.com/stormwarning/zazen-commit-types",
  "author": "Jeff <rustyangel@gmail.com> (https://tidaltheory.co)",
  "devDependencies": {
    "json": "^9.0.6",
    "npm-run-all": "^4.1.2",
    "remark-cli": "~4.0.0",
    "remark-contributors": "~3.1.0",
    "remark-github": "~7.0.2",
    "remark-preset-lint-markdown-style-guide": "~2.1.1",
    "remark-toc": "~4.0.1"
  },
  "keywords": [],
  "license": "MIT",
  "lint-staged": {
    "index.json": [
      "json -f index.json -I",
      "git add"
    ],
    "*.md": [
      "remark . -qo",
      "git add"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-markdown-style-guide",
      [
        "lint-maximum-line-length",
        false
      ],
      [
        "lint-list-item-spacing",
        false
      ],
      "contributors",
      "github",
      "toc"
    ],
    "settings": {
      "commonmark": true,
      "bullet": "-",
      "listItemIndent": 1,
      "rule": "-",
      "ruleSpaces": false,
      "strong": "*",
      "emphasis": "*"
    }
  },
  "repository": "stormwarning/zazen-commit-types",
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:json": "json -f *.json",
    "lint:markdown": "remark . -qo",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint"
  }
}
